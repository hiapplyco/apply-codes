{
  "name": "apply-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Apply AI-powered recruitment platform codebase",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "apply-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:legacy": "node dist/index.js",
    "dev": "tsx src/server.ts",
    "dev:legacy": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist",
    "prepublish": "npm run clean && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@supabase/supabase-js": "^2.45.0",
    "googleapis": "^154.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "recruitment",
    "codebase"
  ],
  "author": "Apply Team",
  "license": "MIT"
}
