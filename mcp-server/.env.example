# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-key-here  # Optional: for enhanced security

# API Keys (Optional - can be managed via Supabase Edge Function)
# If not using Supabase secrets management, set these directly:
# GOOGLE_CSE_API_KEY=your-google-cse-api-key
# GOOGLE_CSE_ID=your-google-cse-id
# GEMINI_API_KEY=your-gemini-api-key  # Required for AI-powered boolean query generation
# PERPLEXITY_API_KEY=your-perplexity-api-key
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key

# MCP Server Configuration
SERVER_PORT=3000
LOG_LEVEL=info

# Authentication (2025 Best Practice)
# Enable in production: set to 'true' (auto-enabled when NODE_ENV=production)
MCP_AUTH_ENABLED=false
# Comma-separated list of API keys (generate with: node -e "console.log('mcp_' + Math.random().toString(36).substr(2, 32))")
MCP_API_KEYS=
# For testing: set client API key
# MCP_CLIENT_API_KEY=your-test-key

# Rate Limiting (2025 Best Practice)
# Enabled by default - set to 'false' to disable
MCP_RATE_LIMIT_ENABLED=true
# Maximum requests per session per window
MCP_RATE_LIMIT_MAX=100
# Time window in milliseconds (default: 3600000 = 1 hour)
MCP_RATE_LIMIT_WINDOW_MS=3600000

# Legacy Rate Limiting (deprecated - use MCP_RATE_LIMIT_* instead)
MAX_SEARCHES_PER_MINUTE=30
MAX_RESULTS_PER_SEARCH=20

# Local Cache Settings (Optional)
# SECRETS_CACHE_TTL=3600000  # Cache TTL in milliseconds (default: 1 hour)